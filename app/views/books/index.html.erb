<h1><b>Books</b></h1>
<% @books.each do |book| %>

<p><b>Title</b></p>
<span><%= book.title %></span>

<p><b>Body</b></p>
<span><%= book.body %></span>

<%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", book_path(book.id) %>
<% end %>

<h1><b>New Book</b></h1>
<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book'%>
<% end %>