<h1><b>Books</b></h1>
<% @books.each do |book| %>


<p><b>Title</b></p>
<span><%= book.title %><%= book.title %></span>

<p><b>Body</b></p>
<span><%= book.body %><%= book.body %></span>

<%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

<% end %>

<h1><b>New Book</b></h1>
