<h1><b>Editing Book</b></h1>
<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book'%>
<% end %>

<span>
    <%= link_to "edit", book_path(@book.id) %>
  </span>
<span>
    <%= link_to "back", books_path %>
  </span>